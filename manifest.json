{
	"manifest_version": 2,
	"name": "Image Click Downloader",
	"version": "1.0",
	"default_locale": "en",
	
	"description": "__MSG_extensionDescription__",
	
	"icons": {
		"48": "icons/icon-48.png"
	},
	
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*",
				"file://*/*"
			],
			"js": ["main.js"],
			"run_at": "document_start"
		}
	],
	
	"background": {
		"scripts": ["background.js"]
	},
	
//	"options_ui": {
//		"page": "options_ui/options.html"
//	},
	
	"permissions": ["downloads", "notifications"]
}
